<template name="listUsersForSessionTrackerSmsAlerts" xmlns="http://ws.apache.org/ns/synapse">

  <parameter name="companyId" description="The Identifier of a company."/>
  <parameter name="trackerId" description="The Identifier of a tracker."/>
  <parameter name="perPage" description="Indicates how many records to return for this request per page."/>
  <parameter name="page" description="Indicates the page number that should be returned for this request."/>
  
  <sequence>

    <property name="uri.var.companyId" expression="$func:companyId"/>
    <property name="uri.var.trackerId" expression="$func:trackerId"/>
    <property name="uri.var.perPage" expression="$func:perPage"/>
    <property name="uri.var.page" expression="$func:page"/>

    <call>
      <endpoint>
        <http method="get" uri-template="{uri.var.apiUrl}/companies/{uri.var.companyId}/session_trackers/{uri.var.trackerId}/sms_alerts.json?per_page={uri.var.perPage}&amp;page={uri.var.page}"/>
      </endpoint>
    </call>

  	<!-- Remove response custom header information -->
	<header name="X-Runtime" scope="transport" action="remove" />
	<header name="X-UA-Compatible" scope="transport" action="remove" />
	<header name="X-Request-Id" scope="transport" action="remove" />
	<header name="WWW-Authenticate" scope="transport" action="remove" />
    
  </sequence>
</template>