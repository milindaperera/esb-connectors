<template xmlns="http://ws.apache.org/ns/synapse" name="getCommentOfTrack">
    <parameter name="trackId" description="track id for the given track"></parameter>
    <parameter name="commentId" description="comment id for the given comment"></parameter>

    <sequence>
        <property name="uri.var.soundcloud.trackId" expression="$func:trackId" />
        <property name="uri.var.soundcloud.commentId" expression="$func:commentId"/>

        <property name="Accept-Encoding" scope="transport" action="remove"/>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.soundcloud.urlHttp}/tracks/{uri.var.soundcloud.trackId}/comments/{uri.var.soundcloud.commentId}.json?client_id={uri.var.soundcloud.clientKey}"/>
            </endpoint>
        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
    </sequence>
</template>