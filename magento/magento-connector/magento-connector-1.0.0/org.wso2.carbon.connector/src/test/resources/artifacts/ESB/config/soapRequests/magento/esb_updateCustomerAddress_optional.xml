<?xml version="1.0" encoding="UTF-8"?>
<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:urn="wso2.connector.magento">
   <soapenv:Header/>
   <soapenv:Body>
      <root>
         <urn:apiUser>%s(apiUser)</urn:apiUser>
         <urn:apiKey>%s(apiKey)</urn:apiKey>
         <urn:apiUrl>%s(apiUrl)</urn:apiUrl>
         <urn:addressId>%s(addressId)</urn:addressId>
         <urn:addressData>
            <values>
                <city>Colombo</city>
               <company>%s(company)</company>
               <country_id>US</country_id>
               <firstname>Jane</firstname>
               <lastname>Doe</lastname>
               <postcode>12000</postcode>
               <street><string>Arcata Main Street</string></street>
               <telephone>94715837733</telephone>
               <is_default_billing>true</is_default_billing>
            </values>
        </urn:addressData>
         <!-- Send Connector method name to be called -->
		<urn:method>updateCustomerAddress</urn:method>
      </root>
   </soapenv:Body>
</soapenv:Envelope>