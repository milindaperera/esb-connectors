<?xml version="1.0" encoding="UTF-8"?>
<template name="getLikes" xmlns="http://ws.apache.org/ns/synapse">
	
	<!-- OAuth 1.0a authentication information -->
	<parameter name="oauthConsumerKey"/>
    <parameter name="oauthConsumerSecret"/>
    <parameter name="oauthAccessToken"/>
    <parameter name="oauthAccessTokenSecret"/>
    
    <!-- Method information -->
    <parameter name="offset"/>
    <parameter name="limit"/>    
    
	<sequence>

        <property name="tumblr.param.offset" expression="$func:offset" scope="default" type="STRING"/>
        <property name="tumblr.param.limit" expression="$func:limit" scope="default" type="STRING"/>
        
        <log level="custom">
        	<property name="OAUTH_CONSUMER_KEY" expression="get-property('tumblr.oauth.consumerKey')"/>
        	<property name="OAUTH_CONSUMER_SECRET" expression="get-property('tumblr.oauth.consumerSecret')"/>
            <property name="OAUTH_ACCESS_TOKEN" expression="get-property('tumblr.oauth.accessToken')"/>
            <property name="OAUTH_ACCESS_SECRET" expression="get-property('tumblr.oauth.accessSecret')"/>

            <property name="OFFSET" expression="get-property('tumblr.param.offset')"/>
            <property name="LIMIT" expression="get-property('tumblr.param.limit')"/>
        </log>
                
        <!-- Create GET url -->
        <property name="tumblr.url.likes" value="http://api.tumblr.com/v2/user/likes" />
                       
       	<class name="org.wso2.carbon.connector.tumblr.TumblrGetLikes"/>
       	
       	<payloadFactory media-type="json">
	       <format>
	          $1
	       </format>
	       <args>
	       		<arg expression="get-property('tumblr.response')"/>
	       </args>
	    </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
               
	</sequence>
</template>
