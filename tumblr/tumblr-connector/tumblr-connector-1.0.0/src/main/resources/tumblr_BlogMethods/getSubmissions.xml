<template xmlns="http://ws.apache.org/ns/synapse" name="getSubmissions">
	<!-- OAuth 1.0a authentication information -->
	<parameter name="oauthConsumerKey"/>
    <parameter name="oauthConsumerSecret"/>
    <parameter name="oauthAccessToken"/>
    <parameter name="oauthAccessTokenSecret"/>
    
    <!-- Method information -->
    <parameter name="baseHostUrl"/>
    <parameter name="offset"/>
    <parameter name="filter"/>
    
    <sequence>
        <property name="uri.var.baseHostUrl" expression="$func:baseHostUrl"/>
        <property name="tumblr.param.offset" expression="$func:offset"/>
        <property name="tumblr.param.filter" expression="$func:filter"/>
        
        <!-- Create GET url -->
        <property name="tumblr.url.submissions" expression="fn:concat('http://api.tumblr.com/v2/blog/', 
        									get-property('uri.var.baseHostUrl'), '/posts/submission')" />
        										

        
        <class name="org.wso2.carbon.connector.tumblr.TumblrGetSubmissions"/>
        
        <payloadFactory media-type="json">
	       <format>
	          $1
	       </format>
	       <args>
	       		<arg expression="get-property('tumblr.response')"/>
	       </args>
	    </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        
    </sequence>
</template>