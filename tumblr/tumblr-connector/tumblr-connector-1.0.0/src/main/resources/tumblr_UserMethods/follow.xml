<?xml version="1.0" encoding="UTF-8"?>
<template name="Follow" xmlns="http://ws.apache.org/ns/synapse">
	
	<!-- OAuth 1.0a authentication information -->
	<parameter name="oauthConsumerKey"/>
    <parameter name="oauthConsumerSecret"/>
    <parameter name="oauthAccessToken"/>
    <parameter name="oauthAccessTokenSecret"/>
    
    <!-- Method information -->
    <parameter name="url"/>
   
    
	<sequence>

        <property name="tumblr.param.url" expression="$func:url" scope="default" type="STRING"/>
        
        <!-- Create POST url -->
        <property name="tumblr.url.follow" value="http://api.tumblr.com/v2/user/follow" />
                       
       	<class name="org.wso2.carbon.connector.tumblr.TumblrFollow"/>
        
        <payloadFactory media-type="json">
	       <format>
	          $1
	       </format>
	       <args>
	       		<arg expression="get-property('tumblr.response')"/>
	       </args>
	    </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
	</sequence>
</template>
