<?xml version="1.0" encoding="UTF-8"?>
<template name="like" xmlns="http://ws.apache.org/ns/synapse">
	
	<!-- OAuth 1.0a authentication information -->
	<parameter name="oauthConsumerKey"/>
    <parameter name="oauthConsumerSecret"/>
    <parameter name="oauthAccessToken"/>
    <parameter name="oauthAccessTokenSecret"/>
    
    <!-- Method information -->
    <parameter name="postId"/>
    <parameter name="reblogKey"/>
   
    
	<sequence>

        <property name="tumblr.param.id" expression="$func:postId" scope="default" type="STRING"/>
        <property name="tumblr.param.reblogId" expression="$func:reblogKey" scope="default" type="STRING"/>
        
        <!-- Create POST url -->
        <property name="tumblr.url.like" value="http://api.tumblr.com/v2/user/like" />
                       
       	<class name="org.wso2.carbon.connector.tumblr.TumblrLike"/>
       	
       	<payloadFactory media-type="json">
	       <format>
	          $1
	       </format>
	       <args>
	       		<arg expression="get-property('tumblr.response')"/>
	       </args>
	    </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
               
	</sequence>
</template>
