<template name="getClient" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="clientId" description="Unique identifier for the client." />

	<sequence>
		<property name="uri.var.clientId" expression="$func:clientId" />

		<payloadFactory media-type="xml">
			<format>
				<request xmlns="" method="client.get">
					<client_id>$1</client_id>
				</request>
			</format>
			<args>
				<arg expression="get-property('uri.var.clientId')" />
			</args>
		</payloadFactory>

		<call>
			<endpoint>
				<http method="post" uri-template="{uri.var.apiUrl}/api/2.1/xml-in" />
			</endpoint>
		</call>

		<!-- Remove custom header information in response -->
		<header name="X-Frame-Options" scope="transport" action="remove" />
		<header name="Strict-Transport-Security" scope="transport" action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />

	</sequence>
</template>