<template name="getTax" xmlns="http://ws.apache.org/ns/synapse">

	<parameter name="taxId" description="The Id of the tax to retreive" />
	<sequence>

		<property name="uri.var.taxId" expression="$func:taxId" />
		<payloadFactory media-type="xml">
			<format>
				<request method="tax.get" xmlns="">
					<tax_id>$1</tax_id>
				</request>
			</format>
			<args>
				<arg expression="get-property('uri.var.taxId')" />
			</args>
		</payloadFactory>
		<call>
			<endpoint>
				<http method="post" uri-template="{uri.var.apiUrl}/api/2.1/xml-in" />
			</endpoint>
		</call>

		<header name="X-Frame-Options" scope="transport" action="remove" />
		<header name="Strict-Transport-Security" scope="transport"
			action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />
	</sequence>
</template>