<template name="getReceipt" xmlns="http://ws.apache.org/ns/synapse">

	<parameter name="expenseId" description="The expense ID for which to retrieve the receipt" />
	<sequence>

		<property name="uri.var.expenseId" expression="$func:expenseId" />
		<payloadFactory media-type="xml">
			<format>
				<request method="receipt.get" xmlns="">
					<expense_id>$1</expense_id>
				</request>
			</format>
			<args>
				<arg expression="get-property('uri.var.expenseId')" />
			</args>
		</payloadFactory>
		<call>
			<endpoint>
				<http method="post" uri-template="{uri.var.apiUrl}/api/2.1/xml-in" />
			</endpoint>
		</call>

		<header name="X-Frame-Options" scope="transport" action="remove" />
		<header name="Strict-Transport-Security" scope="transport"
			action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />
	</sequence>
</template>