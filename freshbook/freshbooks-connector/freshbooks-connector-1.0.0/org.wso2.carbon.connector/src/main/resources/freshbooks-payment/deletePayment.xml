<template name="deletePayment" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="paymentId" description="Payment ID to delete." />

	<sequence>
		<property name="uri.var.paymentId" expression="$func:paymentId" />

		<payloadFactory media-type="xml">
			<format>
				<request xmlns="" method="payment.delete">
					<payment_id>$1</payment_id>
				</request>
			</format>
			<args>
				<arg expression="get-property('uri.var.paymentId')" />
			</args>
		</payloadFactory>

		<call>
			<endpoint>
				<http method="post" uri-template="{uri.var.apiUrl}/api/2.1/xml-in" />
			</endpoint>
		</call>

		<!-- Remove custom header information in response -->
		<header name="X-Frame-Options" scope="transport" action="remove" />
		<header name="Strict-Transport-Security" scope="transport" action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />

	</sequence>
</template>